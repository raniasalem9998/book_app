<!DOCTYPE html>
<html lang="en">
<head>
    <title>book-app</title>
    <%- include('../layout/head') %>
</head>
<body>
    <%- include('../layout/header') %>

    <main>
        <h1>HOME PAGE</h1>
        <br> <br>
            <h2>Here you can search and save your favorit books </h2>
                <br>
            <h3><%= bookNum %> Saved Books</h3>

    <ul>
        <% books.forEach(book=>{ %>
            <li>
                <div id='result'><img src=<%= book.image_url %>>
                    <br>
                    <h2><%= book.title %></h2> 

                    <h3><%= book.author %></h3>
                    <a href="/books/<%= book.id%>"><button>View Details</button></a>
                    <br>
                </div> 
            </li>
       <% }) %>
        
    </ul>
    </main>
    <script>
        $('#updateDataForm').hide();
        $('#showform').click(()=>{
        $('#updateDataForm').slideToggle();
    })
    
    $(".tabs").hide();
    $("#burger").click(()=>{
      $(".tabs").slideToggle();
     });
    
    </script>
    <%- include('../layout/footer') %>
 
</body>
</html>