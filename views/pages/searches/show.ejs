<!DOCTYPE html>
<html lang="en">
<head>
   
    <title>Books</title>
    <%- include('../../layout/head') %>
</head>
<body>
    <%- include('../../layout/header') %>

    <main>
        <h1>Search Results</h1>
            <ul>
                <% shelf.forEach(book => { %>
                    <li>
                      <div>
                        <img src=" <%= book.image_url %> " alt="cover">
                        <h2> <%= book.title %></h2>
                        <h3> <%= book.author %></h3>
                        <p> <%= book.description %></p>
                      </div>
                      <button id="showform">Add To Shelf</button>
                    <form  id= 'updateDataForm' action="/books" method="POST">
                        <label for="title">Title <input name= "title" id="title" type="text" value="<%= book.title %>" ></label> 
                        <br>
                        <label for="author">Author <input name='author' id = 'author' type="text" value="<%= book.author %>" ></label>
                        <br>
                        <label for="ISBN">ISBN <input name='ISBN' id = 'ISBN' type="text" value="<%= book.ISBN %>" ></label>
                        <br>
                        <label for="image_url">Image Path <input name='image_url' id = 'image_url' type="text" value= "<%= book.image_url%>" ></label>
                        <br>
                        <label for="description">Description <input name='description' id = 'description' type="text" value= "<%= book.description %>" ></label>
                        <br>
                        <label for="bookshelf">Book Shelf <input type="text" > </label>
                        <br>
                        <button type="submit">Add book to shelf</button>
                    </form>
                    </li>
                <% }); %>
            </ul>
       
    </main>
    <script>
        $('#updateDataForm').hide();
        $('#showform').click(()=>{
        $('#updateDataForm').slideToggle();
    })
    
    $(".tabs").hide();
    $("#burger").click(()=>{
      $(".tabs").slideToggle();
     });
    
    </script>
    
    <%- include('../../layout/footer') %>

  
</body>
</html>